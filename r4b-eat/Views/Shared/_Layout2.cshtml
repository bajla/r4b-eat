<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - r4b_eat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Dijak.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/r4b_eat.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/box.css' rel='stylesheet'>
    <script src="~/js/site.js"></script>
</head>
<body>

    <!-- Vertical navbar -->
    <div style="margin-right:5px;" class="vertical-nav bg-white" id="sidebar">
        <div style="border-right: 3px solid black; border-bottom: 3px solid black; background-color: lightcyan;" class="py-4 px-3 mb-4">
            <div class="media d-flex align-items-center">
                <div class="media-body">
                    <h4 class="m-0">Dijak</h4>
                    <a asp-area="" asp-controller="All" asp-action="Profile">Profil</a>
                </div>
            </div>
        </div>


        <ul style="text-align:center; margin-top:13px; " class="nav flex-column bg-white mb-0">
            <li class="nav-item itemNav">
                <a class="nav-link text-dark font-italic special" asp-area="" asp-controller="Dijak" asp-action="Nadzorna">
                    <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                    <!-- <i class="gg-box"></i> -->
                    Nadzorna plošča
                </a>
            </li>
            <li class="nav-item itemNav">
                <a class="nav-link text-dark font-italic special" asp-area="" asp-controller="Dijak" asp-action="Predmeti">
                    <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                    <!-- <i class="gg-box"></i> -->
                    Predmeti
                </a>
            </li>
            
            <li class="nav-item itemNav">

                <a class="nav-link text-dark font-italic special" asp-area="" asp-controller="All" asp-action="Odjava">
                    <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                    Odjava
                </a>

            </li>
    
    </ul>


    </div>
    <!-- End vertical navbar -->
    <!-- Page content holder -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- End demo content -->



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

