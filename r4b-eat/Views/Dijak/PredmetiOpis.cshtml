@model predmetiOpisDisplay

<div class="predmetiOpisMain">
    <div class="opisPredmeta">
        <div class="predmetki">
            <h2>@Model.predmet.predmet</h2>
            <br />
            <p> @Model.predmet.opis </p>
        </div>
        <div class="predmetki">
            <h2>Gradiva</h2>
            <br />
            <table class="vseTabela tabelala">
                <thead class="headin">
                    <tr>
                        <th class="vseTabelaHeadOne">#</th>
                       
                        <th class="vseTabelaHead">Ime gradiva</th>
                        <th class="vseTabelaHead">Opis Gradiva</th>
                        <th class="vseTabelaHead">Odpri gradivo</th>


                    </tr>
                </thead>
                <tbody class="vseTabela tabelala">

                    @foreach (var i in Model.gradiva)
                        {


                    <tr class="vseTabela tabelala">

                        <td>1</td>
                        <td>@i.ime</td>
                        <td>@i.opis</td>
                        <td>
                            <a class="null" href="/Dijak/Gradiva?id=@i.id_gradiva">
                                <span class="bold"> ODPRI </span>
                            </a>
                        </td>

                    </tr>

                        }
                </tbody>
            </table>
        </div>
        <div class="predmetki">
            <h2>Naloge</h2>
            <br />
            <table class="vseTabela tabelala">
                <thead class="headin">
                    <tr>
                        <th class="vseTabelaHeadOne">#</th>
                        <th class="vseTabelaHead">Ime naloge</th>
                        <th class="vseTabelaHead">Rok</th>
                        <th class="vseTabelaHead">Oddaj nalogo</th>


                    </tr>
                </thead>
                <tbody class="vseTabela tabelala">

                    @foreach (var i in Model.naloge)
                        {


                    <tr class="vseTabela tabelala">
                        <td>1</td>
                        <td>@i.ime_naloge</td>
                        <td>@i.rok_naloge.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a class="null" href="/Dijak/OddajaNaloge?id=@i.id_naloge" >
                                <span class="bold">ODDAJ NALOGO</span>
                            </a>
                        </td>

                    </tr>
                        }

                </tbody>
            </table>
        </div>
    </div>
    
</div>
