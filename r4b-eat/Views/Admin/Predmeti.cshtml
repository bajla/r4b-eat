@model List<predmetiDisplayModel>

<a  asp-area="" asp-controller="Admin" asp-action="PredmetiAdd">  <i id="plus" class="gg-add"></i>  </a>
<div class="container mx-auto mt-4">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">

                    <div class="card-body">
                        <h5 class="card-title">@item.predmet</h5>

                        @foreach (var ime in item.ime)
                        {
                            <h6 class="card-subtitle mb-2 text-muted">@ime</h6>
                        }
                        
                        <p class="card-text">@item.opis</p>
                        <a class="btn mr-2"><i class="fas fa-link"></i>Uredi</a>
                        <a class="btn "><i class="fab fa-github"></i>Izbrisi</a>
                    </div>
                </div>
            </div>

        }



    </div>
</div>

