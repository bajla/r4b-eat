@model List<ucenciDisplayModel>
<a asp-area="" asp-controller="Admin" asp-action="AddUporabnikAdmin">  <i id="plus" class="gg-add"></i>  </a>

@{
    int modal = 0;
}

<div class="container py-5">
    <div class="row">
        <div style="width:1300px !important; margin-left:7% !important;" class="col-lg-7 mx-auto bg-white rounded shadow">

            <!-- Fixed header table-->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Profesorji</th>
                            <th scope="col">Ime</th>
                            <th scope="col">Priimek</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">Predmeti</th>
                            <th scope="col">Datum Rojstva</th>
                            <th scope="col">Uredi</th>
                            <th scope="col">Izbrisi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row" class="col-3">1</th>
                                <td class="col-3">@item.ime</td>
                                <td class="col-3">@item.priimek</td>
                                <td class="col-3">@item.email</td>
                                <td class="col-3">
                                    <a href="#myModal-@modal" class="trigger-btn" data-toggle="modal">Predmeti</a>
                                </td>
                                <td> <button><a style="color:black;" asp-area="" asp-controller="All" asp-action="Profile">Uredi</a></button></td>
                                <td> <button>Odstrani</button></td>
                                <td>
                            <div id="myModal-@modal" class="modal fade">
                                    <div class="modal-dialog modal-confirm">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                @foreach (var i in item.predmeti)
                                                    {
                                                        <p>@i</p><br>

                                                    }

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                </td>

                            </tr>

                                modal++;
                            }
                        
                    </tbody>
                </table>
               
            </div><!-- End -->

        </div>
    </div>
</div>
