@model List<ucenciDisplayModel>

@{

    int modal = 0;

}
<a href="/Admin/AddUporabnik?page=Ucenci">  <i id="plus" class="gg-add"></i>  </a>

<div class="container py-5">
    <div class="row">
        <div style="width:1300px !important; margin-left:7% !important;" class="col-lg-7 mx-auto bg-white rounded shadow">

            <!-- Fixed header table-->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Dijaki</th>
                            <th scope="col">Ime</th>
                            <th scope="col">Priimek</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">Predmeti</th>
                            <th scope="col">Uredi</th>
                            <th scope="col">Izbrisi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 1;}

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row" class="col-3">@count</th>
                                <td class="col-3">@item.ime</td>
                                <td class="col-3">@item.priimek</td>
                                <td class="col-3">@item.email</td>
                                <td class="col-3">
                                    <a href="#myModal-@modal" class="trigger-btn" data-toggle="modal">Predmeti</a>
                                </td>
                                <td> <button><a href="/Admin/UrediUporabnik?id=@item.id_uporabnika">Uredi</a></button></td>
                                <td> <button><a href="/Admin/Deleteuser?page=Ucenci&id=@item.id_uporabnika">Odstrani</a></button></td>

                                <td>
                                    <div id="myModal-@modal" class="modal fade">
                                        <div class="modal-dialog modal-confirm">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    @foreach (var i in item.predmeti)
                                                    {
                                                        <p>@i</p>

                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>


                            </tr>
                                count++;
                                modal++;
                            }

                    </tbody>
                </table>

            </div><!-- End -->

        </div>
    </div>
</div>
